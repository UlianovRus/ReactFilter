@import url('https://fonts.googleapis.com/css?family=Teko');
body
    background-image url(iron.png)
    margin 0
    padding 0
.elemets
    max-width 850px
    min-width 0
    margin 0 auto
    border 5px solid
    border-radius 20px
    background-color #F77408
    font-family: 'Teko', sans-serif;
    color #fff
.sorting
    margin 25px
    display flex
    flex-wrap wrap
    justify-content center
.sorting_name
    border 5px solid #fff
    border-radius 20px
    font-size 30px
    margin-top 15px
    width 300px
    margin-left 15px
    padding 20px
    text-align center
    color black
button
    font-size  30px
    margin 5px
    background-color #79DC0F
    border 3px solid #fff
    border-radius 20px
    outline: 0 
    &:hover
        background-color #CCFB99
        cursor pointer
        color #0B4C97
    &:active
        background-color #EEFBE0

label
    font-size 25px
    color #fff
input
    margin 20px
.elemets_list
    list-style-type none
    padding 0
.elemets_list li
    text-align center
    border 2px solid
    margin 25px
    border-radius 20px
    background-color #142303
    display flex
    justify-content center
    flex-wrap wrap
.name
    width 400px
    align-self center
.name_text
    font-size 30px
    margin 20px
    border 5px solid #FFF
    border-radius 20px
    background-color #79DC0F
    &:hover
        background-color #CCFB99
        cursor pointer
        color #0B4C97
    &:active
        background-color #EEFBE0
.name_text_link
        color #fff
        text-decoration none
.text
    display flex
    font-size 26px
    text-transform uppercase
    justify-content space-between
.text ul
    list-style-type none
    padding 0
.text li
    border none
